@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
  @apply text-4xl;
}

h2 {
  @apply text-3xl;
}

a {
  @apply text-blue-600;
}

a:hover {
  @apply text-blue-400;
}

ul {
    padding-left: 10px;
    @apply mb-4;
}

.schema-browser {
  @apply py-2;
  @apply border-4;
  @apply border-gray-400;
  max-height: 400px;
  overflow: scroll;
}

.less-important {
    @apply text-gray-600;
}

